@namespace Oniqys.Blazor.Controls
@using Oniqys.Blazor.ViewModel
@inherits ViewComponentBase<object>

@if (ChildContent != null)
{
    @ChildContent(DataContext)
}

@if (DataTemplates != null)
{
    @DataTemplates.GetComponent(DataContext.GetType());
}

@code {
    [Parameter]
    public RenderFragment<object> ChildContent { get; set; }

    [Parameter]
    public DataTemplateSelector DataTemplates { get; set; }
}
