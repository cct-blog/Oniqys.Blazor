@namespace Oniqys.Blazor.Controls
@using Oniqys.Blazor.ViewModel
@inherits ComponentBase
@typeparam DataType

@if (DataContext is DataType typedContext)
{
    <View DataContext=@typedContext>
        @ChildContent(typedContext)
    </View>
}

@code {
    [Parameter]
    public RenderFragment<DataType> ChildContent { get; set; }

    [Parameter]
    public object DataContext { get; set; }
}
